---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO dinámico -->
    <title>{Astro.props.title || 'B&Y Terrenos y Proyectos - Venta de terrenos en Cundinamarca'}</title>
    <meta name="description" content="Terrenos campestres en Nocaima y Nimaima con alta valorización. Compra directa, vistas naturales y facilidades de pago." />
    <meta property="og:title" content="B&Y Terrenos y Proyectos" />
    <meta property="og:description" content="Invierte en terrenos rurales en Cundinamarca. Excelente ubicación y precios negociables." />
    <meta property="og:image" content="assets/img/hola.jpg" />
    <meta property="og:type" content="website" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  </head>

  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
